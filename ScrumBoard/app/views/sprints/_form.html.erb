<%= form_with(model: sprint, local: true) do |form| %>
  <% if sprint.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sprint.errors.count, "error") %> prohibited this sprint from being saved:</h2>

      <ul>
      <% sprint.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :sprint_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :sprint_description %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_select :start_date, id: :sprint_start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_select :end_date, id: :sprint_end_date %>
  </div>

  <div class="field">
    <%= form.label :label %>
    <%= form.text_field :label, id: :sprint_label %>
  </div>

  <div class="field">
    <%= form.label :active %>
    <%= form.check_box :active, id: :sprint_active %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
